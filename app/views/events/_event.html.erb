<li class='event'>
    <div class='day'>
        <%= event.created_at.strftime('%d') %>
    </div>
    <div>
        <span><b><%= event.goal.name %></b> - completed</span>
        <% if event.post.length > 0 %>
            <p style='margin-left: 20px;'> > <%= event.post %></p>
        <% end %>
        <p><%= event.created_at.strftime('%l:%M %p - %B %e, %Y') %></p>
        
        <% if event.post.length == 0 %>
            <%= link_to 'Add comment', edit_event_path(event) %>
        <% else %>    
            <%= link_to 'Edit comment', edit_event_path(event) %>
        <% end %>
         |
        <%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    
    <% avatar = event.user.avatar || 'http://www.ohmyhandmade.com/wp-content/uploads/2011/12/twitter-egg.jpg' %>
    <div class='avatar mini' style='float:right; background-image: url(<%= avatar %>)'></div>

</li>